<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title>News</title>
  <style rel="stylesheet" type="text/css">
  h1 {
    font-family: sans-serif;
    color: #2E2E2E;
  }
  body {
    margin: 10px;
    padding: 0;
  }
  .container {
    padding: 25px;
  }
  input {
    padding: 10px;
    width: 250px;
    margin-top: 10px;
  }
  textarea {
    margin-top: 10px;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }
  table, th, td {
    border: 1px solid black;
  }
  th {
    height: 50px;
    text-align: center;
  }
  td {
    height: 30px;
    text-align: center;
  }
  </style>
</head>
<body>
  <div class="container">
    <h1>NEWS</h1>
    <div class="row">
      <form action="/news/store" method="post">
        <!-- <label for="title">Title</label> -->
        <input type="text" name="title" id="title" placeholder="News title">
        <br/>
        <input type="text" name="summary" id="summary" placeholder="News summary">
        <br/>
        <input type="text" name="author" id="author" placeholder="News author">
        <br/>
        <input type="date" name="published" id="published">
        <br/>
        <!-- <label for="content">content</label> -->
        <textarea id="content" name="content" placeholder="Content..." rows="8" cols="80"></textarea>
        <br/>
        <input type="submit" value="Seed">
      </form>
    </div>

    <div class="row">
      <table>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Content</th>
        </tr>

        <% for(var i=0; i< news.length; i++){ %>
          <tr>
            <td><%= news[i].id_news %></td>
            <td><%= news[i].title %></td>
            <td><%= news[i].content %></td>
          </tr>
          <% } %>

        </table>
      </div>
    </div>
  </body>
  </html>
