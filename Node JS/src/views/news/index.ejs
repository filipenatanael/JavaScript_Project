<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title>News</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="shortcut icon" href="/images/favicon.ico" />
</head>
<body>
  <div class="container">
    <h1>NEWS</h1>

    <!-- EJS - Embedded JavaScript Templates -->
    <% if(typeof validation !== "undefined") {%>
      <ul>
        <% for(var i=0; i < validation.length; i++){ %>
          <li><%= validation[i].msg %></li>
        <% } %>
      </ul>
      <% } %>

      <div class="row">
        <form action="/news/store" method="post">
          <!-- <label for="title">Title</label> -->
          <input type="text" name="title" id="title" value="<%=news.title%>" placeholder="News title">
          <br/>
          <input type="text" name="summary" id="summary" value="<%=news.summary%>" placeholder="News summary">
          <br/>
          <input type="text" name="author" id="author" value="<%=news.author%>" placeholder="News author">
          <br/>
          <input type="date" name="published" id="published" value="<%=news.published%>">
          <br/>
          <!-- <label for="content">content</label> -->
          <textarea name="content" id="content" value="<%=news.content%>" placeholder="Content..." rows="8" cols="80"></textarea>
          <br/>
          <input type="submit" value="Seed">
        </form>
      </div>

      <div class="row">
        <table>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Summary</th>
            <th>Author</th>
            <th>Published</th>
            <th>Content</th>
          </tr>

          <% for(var i=0; i< news.length; i++){ %>
            <tr>
              <td><%= news[i].id_news %></td>
              <td><%= news[i].title %></td>
              <td><%= news[i].summary %></td>
              <td><%= news[i].author %></td>
              <td><%= news[i].published %></td>
              <td><%= news[i].content %></td>
            </tr>
            <% } %>

          </table>
        </div>
      </div>
    </body>
    </html>
