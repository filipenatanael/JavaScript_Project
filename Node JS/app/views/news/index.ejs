<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title>News</title>
</head>
<body>
  <h1>News</h1>
  <br/>

  <form action="/news/store" method="post">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" placeholder="News Title">
    <br/>
    <label for="content">content</label>
    <textarea id="content" name="content" rows="8" cols="80"></textarea>
    <br/>
    <input type="submit" value="Seed">
  </form>
  <br/>

  <table>
    <tr>
      <td>ID</td>
      <td>Title</td>
      <td>Content</td>
    </tr>

    <% for(var i=0; i< news.length; i++){ %>
      <tr>
        <td><%= news[i].id_news %></td>
        <td><%= news[i].title %></td>
        <td><%= news[i].content %></td>
      </tr>
      <% } %>

    </table>
  </body>
  </html>
